# Используйте базовый образ с необходимой версией Node.js
FROM node:14

# Установка рабочей директории для фронтенда
WORKDIR /app

# Копирование файлов зависимостей фронтенда
COPY package.json package-lock.json ./

# Установка зависимостей
RUN npm install

# Копирование всех файлов фронтенда
COPY . .

# Открытие порта для фронтенда
EXPOSE 3000

# Команда для запуска вашего приложения
CMD ["npm", "start"]
